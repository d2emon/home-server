extends layout

block content
  .content-padding-2
    .container_12
      .wrapper
        .grid_12
          .padding-grid-1
            h3.letter Our <strong>Discography</strong>
          each a, id in albums
            div(class='wrapper p3')
              article(class='grid_4 alpha')
                .padding-grid-2
                  .wrapper
                    figure(class='style-img-2 fleft')
                      a(href='#')
                        img(src=a.thumb, alt='')
              article(class='grid_8 alpha')
                .padding-grid-2
                  h4(class='margin-none indent-top1')
                    strong #{(a.date) ? a.date.getFullYear() : ""}. #{a.title}
                  p.prev-indent-bot
                    = a.description
                  .wrapper
                    ul(class='list-1 fleft')
                      each t, id in a.tracks
                        li
                          a(href='#') #{t.trackno}. #{t.title}
                    ul(class='list-2 fright')
                      each t, id in a.tracks
                        li
                          span
                            a(class='left-list', href='#')
                          a(class='right-list', href='#')
